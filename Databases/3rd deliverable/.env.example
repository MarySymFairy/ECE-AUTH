# Database configuration
DB_HOST=localhost                # Database host (e.g., localhost, 127.0.0.1)
DB_PORT=3306                     # Database port (default: 3306 for MySQL)
DB_USER=root                     # Database username
DB_PASSWORD=                     # Database password
DB_NAME=my_db                    # Name of the database

# Server configuration
PORT=3306                        # Port number for the server to run on
NODE_ENV=development             # Node environment (e.g., development, production)
